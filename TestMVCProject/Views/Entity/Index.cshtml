@model IEnumerable<TestMVCProject.Models.Domain.EntityModel>

<h1>Data</h1>

@using (Html.BeginForm("Search", "Entity", FormMethod.Post, new { @class = "form-inline" }))
{
   <table>
       <tr>
           <td>
                @Html.TextBox("Name", null, new { Class = "form-control", placeholer = "Enter name" })
           </td>
           <td>
               <input type="submit" value="search" class="btn btn-success" />
           </td>
       </tr>
   </table>
}



<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td><a href="Details/@item.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>